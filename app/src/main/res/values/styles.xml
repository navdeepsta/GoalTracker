<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/light_black</item>
        <item name="android:textColorSecondary">@color/light_black</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionModeCloseButtonStyle">@style/NoCloseButtonActionModeStyle</item>


    </style>
    <style name="NoCloseButtonActionModeStyle">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="GoalIconColor">
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:button">@drawable/radiobutton_draw</item>
        <item name="android:drawablePadding">50dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
</resources>
