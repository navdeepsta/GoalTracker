<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.navdeep.goaltracker">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.TestActivity"></activity>
        <activity android:name=".View.MilestoneImageActivity"
            android:label="Gallery"/>
        <activity
            android:name=".View.MilestoneInputActivity"
            android:label="Milestone Details" />
        <activity
            android:name=".View.MilestoneActivity"
            android:label="Milestones" />
        <activity
            android:name=".View.GoalActivity"
            android:label="Goals">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.GoalInputActivity"
            android:label="Goal Details"
            android:parentActivityName=".View.GoalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.GoalActivity" />
        </activity>
    </application>

</manifest>